<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bar"
    android:textAlignment="center"
    android:nestedScrollingEnabled="false"
    android:orientation="vertical"
    android:clickable="true"
    android:background="#ffffc483"
    android:baselineAligned="false"
    android:transitionGroup="false"
    android:gravity="center|center_vertical"
    android:touchscreenBlocksFocus="false">

    <Button android:id="@+id/imageToEncrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide \nImage"
        android:backgroundTint="@android:color/primary_text_dark"
        android:longClickable="false"
        android:textSize="30dp"
        android:minHeight="2dp"
        android:minLines="2"
        android:textAlignment="center"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:nestedScrollingEnabled="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:padding="55dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_border" />

    <!--<Button android:id="@+id/toImageGallery"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/toImageGallery"-->
        <!--android:textSize="30dp"-->
        <!--android:minHeight="2dp"-->
        <!--android:minLines="2"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:paddingRight="10dp"-->
        <!--android:background="#ffffffff" />-->

    <ImageView android:id="@+id/forPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/imageToDecrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show \nImage"
        android:backgroundTint="@android:color/primary_text_dark"
        android:longClickable="false"
        android:textSize="30dp"
        android:minHeight="2dp"
        android:minLines="2"
        android:textAlignment="center"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:nestedScrollingEnabled="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:padding="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border"
        />


</LinearLayout>